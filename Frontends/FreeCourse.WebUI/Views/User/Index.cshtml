
@{
    ViewData["Title"] = "Index";
}
@model UserViewModel

<div class="row">
    <div class="col-md-9">

        <div class="card">
            <div class="card-body">

                <h5 class="card-title">User Information</h5>

                <table class="table table-striped">

                    <tr>
                        <td>User Name</td>
                        <td>@Model.UserName</td>
                    </tr>

                    <tr>
                        <td>Email</td>
                        <td>@Model.Email</td>
                    </tr>


                </table>

            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="list-group">

            <a asp-controller="Courses" asp-action="Index" class="list-group-item list-group-item-action">My courses</a>
        </div>
    </div>

</div>
